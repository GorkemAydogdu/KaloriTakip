@model KaloriTakip.Models.tbl_KiloTakip
@{
    ViewBag.Title = "Bilgiler";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<title>Bilgiler</title>
<h4 class="mt-2">Kullanıcı Bilgileri</h4>

@using (Html.BeginForm("Bilgiler", "Kullanici", FormMethod.Post))
{
<div class="form-group mt-3">
    <label class="fw-bold">Weight</label>
    @*Modelden gelen kiloyu yaz*@
    @Html.TextBoxFor(m => m.MevcutKilosu, new { @placeholder = "KG", @class = "form-control" })
    @*Kilodan dönen hatasını gir*@
    @Html.ValidationMessageFor(m => m.MevcutKilosu, "", new { @style = "color:red" })
    <br />
    <label class="fw-bold">Height</label>
    @*Modelden gelen boyu yaz*@
    @Html.TextBoxFor(m => m.MevcutBoy, new { @placeholder = "CM", @class = "form-control" })
    @*Boydan dönen hatasını gir*@
    @Html.ValidationMessageFor(m => m.MevcutBoy, "", new { @style = "color:red" })
    <br />
    <label class="fw-bold">Age</label>
    @*Modelden gelen Yaşı yaz*@
    @Html.TextBoxFor(m => m.Yas, new { @class = "form-control" })
    @*Yaşdan dönen hatasını gir*@
    @Html.ValidationMessageFor(m => m.Yas, "", new { @style = "color:red" })

    <div class="form-group my-3">
        <label class="fw-bold">PAL : </label><br />
        <div class="form-check">
            <input class="form-check-input" type="radio" name="AktiviteSeviyesi" id="AktiviteSeviyesi1" value="Sedentary">
            <label class="form-check-label" for="AktiviteSeviyesi1">Sedentary (little or no exercise): </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="AktiviteSeviyesi" id="AktiviteSeviyesi2" value="Lightly active">
            <label class="form-check-label" for="AktiviteSeviyesi2">Lightly active (light exercise/sports 1-3 days/week):</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="AktiviteSeviyesi" id="AktiviteSeviyesi3" value="Moderately active">
            <label class="form-check-label" for="AktiviteSeviyesi3">Moderately active (moderate exercise/sports 3-5 days/week):</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="AktiviteSeviyesi" id="AktiviteSeviyesi4" value="Very active">
            <label class="form-check-label" for="AktiviteSeviyesi4">Very active (hard exercise/sports 6-7 days a week):</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="AktiviteSeviyesi" id="AktiviteSeviyesi5" value="Extra active">
            <label class="form-check-label" for="AktiviteSeviyesi5">If you are extra active (very hard exercise/sports & a physical job):</label>
        </div>
        @*Aktivite seviyesinden dönen hatasını gir*@
        @Html.ValidationMessageFor(m => m.AktiviteSeviyesi, "", new { @style = "color:red" })
    </div>
    <label class="fw-bold">Total energy expenditure</label>
    @*Modelden gelen günlük kaloriyi yaz*@
    @Html.TextBoxFor(m => m.GunlukKalori, new { @readonly = "true", @class = "form-control" })

    <button style="margin-top:15px;" class="btn btn-success">Update</button>
</div>
}
<script src="https://code.iconify.design/2/2.2.0/iconify.min.js"></script>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Content/JS/JavaScript.js"></script>