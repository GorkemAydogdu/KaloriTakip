@model KaloriTakip.Models.tbl_Kullanici

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>

        .form-control:focus { /*input focus oldugunda border color ve box shadowu kaldır*/
            border-color: none !important;
            box-shadow: none !important;
        }

        .btn:focus { /*btn focus oldugunda bordercolor ve box shadow kaldır*/
            border-color: none !important;
            box-shadow: none !important;
        }
    </style>

    <title>ResetPassword</title>
</head>
<body style="background-color: #eaeaea">
    <div class="container vh-100">
        <div class="row h-100 d-flex justify-content-center align-items-center">
            <div class="col-9 col-sm-9 col-md-7 col-lg-5 col-xl-3 col-xxl-3 p-4 bg-white rounded-3">
                <form method="post">
                    <h2 class="text-center">Reset Password</h2>
                    <h4 class="text-danger">@ViewBag.hata</h4>
                    <div class="form-group ">
                        <label>Email</label>
                        <input class="form-control my-2" type="text" name="Email" />
                        @*Emailden dönen hatyi göster*@
                        @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:red" })
                    </div>

                    <div class="btn-group w-100 mt-4">
                        <button class="btn btn-primary" type="submit">Reset Password</button>
                        <a class="btn btn-danger" href="/Account/Login">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
