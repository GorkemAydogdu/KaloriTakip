@model KaloriTakip.Models.tbl_KiloTakip

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>KiloTakip</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="/Diyetisyen/Anasayfa">Kalori Takip</a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Diyetisyen/KullaniciListele">Kullanici Listesi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Diyetisyen/Anasayfa">@Session["Ad"] @Session["Soyad"] </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Account/LogOut">Çıkış</a>
            </li>
        </ul>
    </nav>

    <div class="container mt-2">
        <div>
            <label>Kullanici Adi</label>
            @Html.TextBoxFor(m => m.tbl_Kullanici.Adi, new { @disabled = "true", @class = "form-control" })
        </div>
        <div>
            <label>Kullanici Soyadi</label>
            @Html.TextBoxFor(m => m.tbl_Kullanici.Soyadi, new { @disabled = "true", @class = "form-control" })
        </div>
        <div>
            <label>Boyu</label>
            @Html.TextBoxFor(m => m.MevcutBoy, new { @disabled = "true", @class = "form-control" })
        </div>
        <div>
            <label>Kilosu</label>
            @Html.TextBoxFor(m => m.MevcutKilosu, new { @disabled = "true", @class = "form-control" })
        </div>
        <div>
            <label>Yasi</label>
            @Html.TextBoxFor(m => m.Yas, new { @disabled = "true", @class = "form-control" })
        </div>
        <div>
            <label>Aktivite Seviyesi</label>
            @Html.TextBoxFor(m => m.AktiviteSeviyesi, new { @disabled = "true", @class = "form-control" })
        </div>
        <div>
            <label>Gunluk Kalori</label>
            @Html.TextBoxFor(m => m.GunlukKalori, new { @disabled = "true", @class = "form-control" })
        </div>
    </div>
</body>
</html>
