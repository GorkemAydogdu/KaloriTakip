@using KaloriTakip.Models
@model List<tbl_DiyetisyenlerinHastalari>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>KullaniciListele</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="/Diyetisyen/Anasayfa">Kalori Takip</a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Diyetisyen/KullaniciListele">Kullanici Listesi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Diyetisyen/Anasayfa">@Session["Ad"] @Session["Soyad"]</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Account/LogOut">Çıkış</a>
            </li>
        </ul>
    </nav>

    <div class="container mt-2">
        <table class="table table-bordered">
            <tr>
                <th>Ad Soyad</th>
                <th>Email</th>
                <th>Kilo Takip</th>
                <th>Beslenme</th>
            </tr>
            <tbody>
                @foreach (var kullanici in Model) /*Modelden gelen kullanici bilgilerini yaz*/
                {
                    <tr>
                        <td>@kullanici.tbl_Kullanici.Adi @kullanici.tbl_Kullanici.Soyadi</td>
                        <td>@kullanici.tbl_Kullanici.Email</td>
                        <td><a class="btn btn-warning" href="/Diyetisyen/KiloTakip/@kullanici.Kullanici">Kilo Takip</a></td>
                        <td><a class="btn btn-secondary" href="/Diyetisyen/KaloriTakip/@kullanici.Kullanici">Kalori Takip</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
